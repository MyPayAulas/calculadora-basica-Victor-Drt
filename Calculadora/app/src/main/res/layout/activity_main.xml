<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    //MOSTRADORES DE RESULTADO E EXPRESSAO
    <TextView
        android:id="@+id/expressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/darkBlue"
        android:textSize="40sp"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:ellipsize="start"
        android:singleLine="true"
        android:text="" />

    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/darkBlue"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:gravity="end"
        android:maxLines="1"
        android:ellipsize="end" />

    //PRIMEIRA LINHA DE BOTOES
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/limpar"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="3"
            android:shadowDy="0"
            android:shadowRadius="5"
            style="@style/Botao_Operadores"
            android:text="C"/>

        <TextView
            android:id="@+id/divisao"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="3"
            android:shadowDy="0"
            android:shadowRadius="5"
            style="@style/Botao_Operadores"
            android:text="/"/>

    </LinearLayout>

    //SEGUNDA LINHA DE BOTOES
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/numero_sete"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            style="@style/Botao_Numeros"
            android:text="7"/>

        <TextView
            android:id="@+id/numero_oito"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            style="@style/Botao_Numeros"
            android:text="8"/>

        <TextView
            android:id="@+id/numero_nove"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            style="@style/Botao_Numeros"
            android:text="9"/>

        <TextView
            android:id="@+id/multiplicacao"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="3"
            android:shadowDy="0"
            android:shadowRadius="5"
            style="@style/Botao_Operadores"
            android:text="x"/>

    </LinearLayout>

    //TERCEIRA LINHA DE BOTOES
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/numero_quatro"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            style="@style/Botao_Numeros"
            android:text="4"/>

        <TextView
            android:id="@+id/numero_cinco"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            style="@style/Botao_Numeros"
            android:text="5"/>

        <TextView
            android:id="@+id/numero_seis"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            style="@style/Botao_Numeros"
            android:text="6"/>

        <TextView
            android:id="@+id/subtracao"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="3"
            android:shadowDy="0"
            android:shadowRadius="5"
            style="@style/Botao_Operadores"
            android:text="-"/>

    </LinearLayout>

    //QUARTA LINHA DE BOTOES
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/numero_um"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            style="@style/Botao_Numeros"
            android:text="1"/>

        <TextView
            android:id="@+id/numero_dois"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            style="@style/Botao_Numeros"
            android:text="2"/>

        <TextView
            android:id="@+id/numero_tres"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            style="@style/Botao_Numeros"
            android:text="3"/>

        <TextView
            android:id="@+id/adicao"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="3"
            android:shadowDy="0"
            android:shadowRadius="5"
            style="@style/Botao_Operadores"
            android:text="+"/>

    </LinearLayout>

    //QUINTA LINHA DE BOTOES
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/ponto"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            style="@style/Botao_Numeros"
            android:text="."/>

        <TextView
            android:id="@+id/numero_zero"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            style="@style/Botao_Numeros"
            android:text="0"/>

        <ImageView
            android:id="@+id/backspace"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            style="@style/Botao_Numeros"
            android:scaleType="center"
            android:src="@drawable/backspace"/>

        <TextView
            android:id="@+id/igual"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="3"
            android:shadowDy="0"
            android:shadowRadius="5"
            style="@style/Botao_Operadores"
            android:text="=" />

    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    //MOSTRADORES DE RESULTADO E EXPRESSAO

    <TextView
        android:id="@+id/txtExpressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="30sp" />

    //PRIMEIRA LINHA DE BOTOES

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/limpar"
            style="@style/Botao_Operadores"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="3"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="C"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/divisao"
            style="@style/Botao_Operadores"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="3"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="/"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </LinearLayout>

    //SEGUNDA LINHA DE BOTOES

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numero_sete"
            style="@style/Botao_Numeros"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="7"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/numero_oito"
            style="@style/Botao_Numeros"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="8"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/numero_nove"
            style="@style/Botao_Numeros"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="9"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/multiplicacao"
            style="@style/Botao_Operadores"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="3"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="x"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </LinearLayout>

    //TERCEIRA LINHA DE BOTOES

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numero_quatro"
            style="@style/Botao_Numeros"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/numero_cinco"
            style="@style/Botao_Numeros"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/numero_seis"
            style="@style/Botao_Numeros"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="6"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/subtracao"
            style="@style/Botao_Operadores"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="3"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </LinearLayout>

    //QUARTA LINHA DE BOTOES

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numero_um"
            style="@style/Botao_Numeros"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/numero_dois"
            style="@style/Botao_Numeros"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/numero_tres"
            style="@style/Botao_Numeros"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/adicao"
            style="@style/Botao_Operadores"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="3"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </LinearLayout>

    //QUINTA LINHA DE BOTOES

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ponto"
            style="@style/Botao_Numeros"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="."
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/numero_zero"
            style="@style/Botao_Numeros"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/backspace"
            style="@style/Botao_Numeros"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshapenormal"
            android:scaleType="center"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:src="@drawable/backspace"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/igual"
            style="@style/Botao_Operadores"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="3"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btHistorico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elegantTextHeight="true"
        android:text="Historico"
        android:textSize="36sp"
        app:cornerRadius="100dp" />


</LinearLayout>